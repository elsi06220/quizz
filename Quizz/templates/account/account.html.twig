{% extends 'base.html.twig' %}

{% block title %}It's Quiz Time !
{% endblock %}

{% block body %}
	<br><br>
	<div class="flex justify-center">
		<div class="max-w-4xl w-full flex flex-wrap justify-center m-4">
			<div class="main mr-4">
				<div class="card bg-white flex flex-col items-center justify-center p-4 shadow-2xl rounded-2xl">
					<div class="profile mx-auto py-2 w-16">
						<img src="/img/default.jpg" alt="profile" class="rounded-full">
					</div>
					<div class="name text-gray-800 text-2xl font-medium mt-4 ">
						<p>Pseudo :
							{{ username }}</p>
					</div>
					<div class="work text-gray-700 mt-4">
						<p>Super Utilisateur de QuizMaster !</p>
					</div>
					<div class="w-full mt-8">
						<a href="/change-account">
							<button class="bg-blue-600 py-2 px-4 hover:bg-blue-700 text-white w-full font-semibold rounded-lg shadow-lg">Modifier mon compte</button>
						</a>
					</div>
				</div>
			</div>
			<div class="main ml-4">
				<div class="card bg-white flex flex-col items-center justify-center p-4 shadow-2xl rounded-2xl h-[270px]">
					<div class="profile mx-auto py-2 w-16">
						<img src="/img/quiz.jpg" alt="profile" class="rounded-full">
					</div>
					<div class="name text-gray-800 text-2xl font-medium mt-4 ">
						<p>Voir mes quiz</p>
					</div>
					<div class="work text-gray-700 mt-4">
						<p>BlaBla la team</p>
					</div><br>
					<div class="w-full mt-8">
						<a href="/change-account">
							<button class="bg-blue-600 py-2 px-4 hover:bg-blue-700 text-white w-full font-semibold rounded-lg shadow-lg">Voir mes quiz faits et créés</button>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br><br>
	<div class="flex justify-center items-center">
		<a href="/logout">
			<button class="bg-red-600 py-2 px-4 hover:bg-red-700 text-white font-semibold rounded-lg shadow-lg">Déconnexion</button>
		</a>
	</div>
	<br><br>
{% endblock %}

{% block footer %}

	<div class="max-w-screen-xl mx-auto p-4 md:py-8">
		<div class="sm:flex sm:items-center sm:justify-between">
			<a href="/" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
				<img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo"/>
				<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">QuizMaster</span>
			</a>
			<ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
				<li>
					<a href="/" class="hover:underline me-4 md:me-6">Accueil</a>
				</li>
				<li>
					<a href="/quiz" class="hover:underline me-4 md:me-6">Quiz</a>
				</li>
				<li>
					<a href="/about" class="hover:underline me-4 md:me-6">A propos</a>
				</li>
				<li>
					<a href="/contact" class="hover:underline">Contact</a>
				</li>
			</ul>
		</div>
		<hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"/>
		<span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2023
			<a href="/" class="hover:underline">QuizMaster</a>. Tout droits réservés.</span>
	</div>

{% endblock %}
