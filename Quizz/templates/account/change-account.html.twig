{% extends 'base.html.twig' %}

{% block title %}It's Quiz Time !
{% endblock %}

{% block body %}
	<br><br>
	<div class="flex justify-center">
		<div class="max-w-4xl w-full flex flex-wrap justify-center m-4">
			<div class="main mr-4">
				<div class="container mx-auto">
					<div class="inputs w-full max-w-2xl p-6 mx-auto">
						<h2 class="text-3xl font-bold dark:text-white text-center">Modifier votre compte</h2>
						<form class="mt-6 border-t border-gray-400 pt-4">
							<div class='flex flex-wrap -mx-3 mb-6'>
								<div class='w-full md:w-full px-3 mb-6'>
									<label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' for='grid-text-1'>Votre email</label>
									<input class='appearance-none block w-full bg-white text-gray-700 border border-gray-400 shadow-inner rounded-md py-3 px-4 leading-tight focus:outline-none  focus:border-gray-500' id='grid-text-1' type='text' placeholder='Nouvel email' required>
								</div>
								<div class='w-full md:w-full px-3 mb-6'>
									<label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' for='grid-text-1'>Votre ancien mot de passe</label>
									<input class='appearance-none block w-full bg-white text-gray-700 border border-gray-400 shadow-inner rounded-md py-3 px-4 leading-tight focus:outline-none  focus:border-gray-500' id='grid-text-1' type='text' placeholder='Ancien mot de passe' required>
								</div>
								<div class='w-full md:w-full px-3 mb-6'>
									<label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' for='grid-text-1'>Votre nouveau mot de passe</label>
									<input class='appearance-none block w-full bg-white text-gray-700 border border-gray-400 shadow-inner rounded-md py-3 px-4 leading-tight focus:outline-none  focus:border-gray-500' id='grid-text-1' type='text' placeholder='Nouveau mot de passe' required>
								</div>
								<div class="personal w-full border-t border-gray-400 pt-4">
									<div class="flex justify-end">
										<button class="ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" type="submit">Sauvegarder les changements</button>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
	<br><br>
{% endblock %}

{% block footer %}

	<div class="max-w-screen-xl mx-auto p-4 md:py-8">
		<div class="sm:flex sm:items-center sm:justify-between">
			<a href="/" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
				<img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo"/>
				<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">QuizMaster</span>
			</a>
			<ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
				<li>
					<a href="/" class="hover:underline me-4 md:me-6">Accueil</a>
				</li>
				<li>
					<a href="/quiz" class="hover:underline me-4 md:me-6">Quiz</a>
				</li>
				<li>
					<a href="/about" class="hover:underline me-4 md:me-6">A propos</a>
				</li>
				<li>
					<a href="/contact" class="hover:underline">Contact</a>
				</li>
			</ul>
		</div>
		<hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"/>
		<span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2023
			<a href="/" class="hover:underline">QuizMaster</a>. Tout droits réservés.</span>
	</div>

{% endblock %}